{
  "displayName": "Homebridge Flair",
  "name": "@ds-flair/homebridge-flair",
  "version": "0.0.0-development",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "description": "Brings the flair smart vents into homekit",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git://github.com/danielschaffer/homebridge-flair.git"
  },
  "bugs": {
    "url": "https://github.com/danielschaffer/homebridge-flair/issues"
  },
  "engines": {
    "node": "^18.17.0 || ^20.9.0 || ^22.0.0",
    "homebridge": "^1.8.0 || ^2.0.0-beta.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src/**.ts --max-warnings=0",
    "lint:fix": "eslint --fix src/**",
    "watch": "npm run build && npm link && nodemon",
    "build": "rimraf ./dist && tsc"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "keywords": [
    "homebridge-plugin",
    "flair"
  ],
  "dependencies": {
    "class-transformer": "^0.5.1",
    "@ds-flair/flair-api-ts": "0.0.0-development",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@semantic-release/changelog": "6.0.2",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.7",
    "@semantic-release/npm": "9.0.1",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "5.47.1",
    "@typescript-eslint/parser": "5.47.1",
    "eslint": "8.31.0",
    "homebridge": "^2.0.0-beta.0",
    "nodemon": "2.0.20",
    "rimraf": "3.0.2",
    "ts-node": "10.9.1",
    "typescript": "^5.0.0"
  }
}
